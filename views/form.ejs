<!DOCTYPE html>
<html>

<head>
  <title>Create Job</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link rel="stylesheet" href="/stylesheets/animated-background.css">
  <script src="/javascripts/formscripts.js" defer></script>
</head>

<body>
  <div class="ripple-background">
    <div class="circle xxlarge shade1"></div>
    <div class="circle xlarge shade2"></div>
    <div class="circle large shade3"></div>
    <div class="circle medium shade4"></div>
    <div class="circle small shade5"></div>
  </div>
  <nav>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/form">Add Jobs</a></li>
      <li><a href="/jobs">List Jobs</a></li>
    </ul>
  </nav>
  <main>
    <h1>Create New Job</h1>

    <form action="/form" method="POST">
      <div>
        <label for="title">Job Title:</label>
        <input type="text" id="title" name="title" required minlength="4" maxlength="50">
        <span class="error-message" id="title-error"></span>
      </div>

      <div>
        <label for="description">Description:</label>
        <textarea id="description" name="description" maxlength="500"></textarea>
      </div>

      <!-- Not using type="datetime-local" due to min and max not respecting restrictions -->
      <div>
        <label for="dueDate">Due Date:</label>
        <input type="date" id="dueDate" name="dueDate" required min="<%= minDate %>" max="<%= maxDate %>">
        <span class="error-message" id="date-error"></span>
      </div>

      <div>
        <label for="time">Time:</label>
        <input type="time" id="time" name="time" required>
      </div>


      <div>
        <label for="repeating">Repeating:</label>
        <input type="checkbox" id="repeating" name="repeating" onclick="toggleRepeatingFrequency()">
      </div>

      <div id="repeatingFrequencyContainer" style="display: none;">
        <label for="repeatingFrequencySelect">Repeating Frequency:</label>
        <select id="repeatingFrequencySelect" name="repeatingFrequency">
          <option value="hourly">Hourly</option>
          <option value="daily">Daily</option>
          <option value="weekly">Weekly</option>
          <option value="monthly">Monthly</option>
          <option value="yearly">Yearly</option>
        </select>
      </div>

      <button type="submit">Create Job</button>
    </form>
  </main>
</body>

</html>
